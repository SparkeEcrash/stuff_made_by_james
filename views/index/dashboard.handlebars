<h1>Welcome {{user.firstName}}</h1>
<h4>Your Apps</h4>
{{#if apps}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each apps}}
        <tr>
          <td><a href="/apps/show/{{id}}">{{title}}</a></td>
          <td>{{formatDate data 'MMMM do YYYY'}}</td>
          <td><span class="dash-status">{{status}}</span></td>
          <td class="center-align">
            <a class="btn" href="/apps/edit/{{id}}"><i class="fa fa-pencil"></i> Edit</a>
            <form action="/apps/{{id}}?_method=DELETE" method="POST" id="delete-form">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn red"><i class="fa fa-remove"></i> Delete</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>You have not created listed any apps yet</p>
{{/if}}
