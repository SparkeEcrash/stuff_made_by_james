<h1>Edit App</h1>
<div class="row">
  <form action="/apps/{{app.id}}?_method=PUT" method="POST" class="col s12" onsubmit="return validateApp()">
  {{!-- method gets overriden as PUT over POST --}}
    <input type="hidden" name="_method" value="PUT">
    <div class="row">
      <div class="input-field col l4 s12">
        <input type="text" id="title" name="title" value="{{app.title}}" spellcheck="false">
        <label for="title">Title</label>
      </div>
      <div class="input-field col l4 s12">
        <input type="text" id="desc" name="desc" value="{{app.desc}}" spellcheck="false">
        <label for="desc">Description</label>
      </div>
      <div class="input-field col l4 s12">
        <input type="text" id="image" name="image" value="{{app.image}}" spellcheck="false">
        <label for="image">Image File</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col l4 s12">
        <input type="text" id="url" name="url" value="{{app.url}}" spellcheck="false">
        <label for="type">Website URL</label>
      </div>  
      <div class="input-field col l4 s12">
        <select id="mobileFriendly" name="mobileFriendly">
          {{#select app.mobileFriendly}}
            <option value="yes" selected>Yes</option>
            <option value="no">No</option>
          {{/select}}
        </select>
        <label for="status">Mobile Friendly</label>
      </div>   
      <div class="input-field col l4 s12">
        <select id="status" name="status">
          {{!-- below part is using the below heper function from hbs.js--}}
          {{!-- select: function(selected, options){} --}}
          {{#select app.status}}
            <option value="public" selected>Public</option>
            <option value="private">Private</option>
            <option value="unpublished">Unpublished</option>
          {{/select}}
        </select>
        {{!-- needs to be initialized in main.handlebars --}}
        {{!-- $('select').material_select(); --}}
        <label for="status">Status</label>
      </div>
    </div>
    <div class="row">
      <div class="col l2 s12">
        <input type="checkbox" id="handlebars" name="techstack[]" {{{techStackCheck app.techStack 'Handlebars.js'}}} value="Handlebars.js"/>
        <label for="handlebars">Handlebars.js</label>
      </div>
      <div class="col l2 s12">
        <input type="checkbox" id="reactredux" name="techstack[]" {{{techStackCheck app.techStack 'React.js + Redux'}}} value="React.js + Redux"/>
        <label for="reactredux">React.js + Redux</label>
      </div>
      <div class="col l2 s12">
        <input type="checkbox" id="angular" name="techstack[]" {{{techStackCheck app.techStack 'Angular.js'}}} value="Angular.js"/>
        <label for="angular">Angular.js</label>
      </div>
      <div class="col l2 s12">
        <input type="checkbox" id="view" name="techstack[]" {{{techStackCheck app.techStack 'View.js'}}} value="View.js"/>
        <label for="view">View.js</label>
      </div>
      <div class="col l2 s12">
        <input type="checkbox" id="meteor"  name="techstack[]" {{{techStackCheck app.techStack 'Meteor.js'}}} value="Meteor.js"/>
        <label for="meteor">Meteor.js</label>
      </div>
      <div class="col l2 s12">
        <input type="checkbox" id="id-jquery" name="techstack[]" {{{techStackCheck app.techStack 'jQuery'}}} value="jQuery"/>
        <label for="id-jquery">jQuery</label>
      </div>
      <div class="col l2 s12">
        <input type="checkbox" id="lodash" name="techstack[]" {{{techStackCheck app.techStack 'Lodash'}}} value="Lodash"/>
        <label for="lodash">Lodash</label>
      </div>
      <div class="col l2 s12">
        <input type="checkbox" id="bootstrap" name="techstack[]" {{{techStackCheck app.techStack 'Bootstrap'}}} value="Bootstrap"/>
        <label for="bootstrap">Bootstrap</label>
      </div>
      <div class="col l2 s12">
        <input type="checkbox" id="materialize-css" name="techstack[]" {{{techStackCheck app.techStack 'Materialize CSS'}}} value="Materialize CSS"/>
        <label for="materialize-css">Materialize CSS</label>
      </div>
      <div class="col l2 s12">
        <input type="checkbox" id="semantic-ui" name="techstack[]" {{{techStackCheck app.techStack 'Semantic UI'}}} value="Semantic UI"/>
        <label for="semantic-ui">Semantic UI</label>
      </div>
      <div class="col l2 s12">
        <input type="checkbox" id="firebase"  name="techstack[]" {{{techStackCheck app.techStack 'Firebase'}}} value="Firebase"/>
        <label for="firebase">Firebase</label>
      </div>
      <div class="col l2 s12">
        <input type="checkbox" id="aws" name="techstack[]" {{{techStackCheck app.techStack 'AWS'}}} value="AWS"/>
        <label for="aws">AWS</label>
      </div>
      <div class="col l2 s12">
        <input type="checkbox" id="php" name="techstack[]" {{{techStackCheck app.techStack 'PHP'}}} value="PHP"/>
        <label for="php">PHP</label>
      </div>
      <div class="col l2 s12">
        <input type="checkbox" id="laravel" name="techstack[]" {{{techStackCheck app.techStack 'Laravel'}}} value="Laravel"/>
        <label for="laravel">Laravel</label>
      </div>
      <div class="col l2 s12">
        <input type="checkbox" id="nodejs" name="techstack[]" {{{techStackCheck app.techStack 'Node.js'}}} value="Node.js"/>
        <label for="nodejs">Node.js</label>
      </div>
      <div class="col l2 s12">
        <input type="checkbox" id="express" name="techstack[]" {{{techStackCheck app.techStack 'Express.js'}}} value="Express.js"/>
        <label for="express">Express.js</label>
      </div>
      <div class="col l2 s12">
        <input type="checkbox" id="mongodb" name="techstack[]" {{{techStackCheck app.techStack 'MongoDB'}}} value="MongoDB"/>
        <label for="mongodb">MongoDB</label>
      </div>
      <div class="col l2 s12">
        <input type="checkbox" id="mysql" name="techstack[]" {{{techStackCheck app.techStack 'MySQL'}}} value="MySQL"/>
        <label for="mysql">MySQL</label>
      </div>
    </div>
    <div class="row">
      <p>
        <input type="checkbox" name="allowComments" class="filled-in" id="filled-in-box" {{#if app.allowComments}} checked="checked" {{/if}}>
        <label for="filled-in-box">Allow comments</label>
      </p>
    </div>
    <div class="row">
      <div class="input-field">
        <h5>List details for your application:</h5>
        <textarea id="body" name="body">{{app.body}}</textarea>
      </div>
    </div>
    <button type="submit" class="waves-effect waves-light btn">Save</button>
  </form>
</div>
<div id="modal3" class="modal">
  <div class="modal-content">
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">OK</a>
  </div>
</div>

<script src="https://cdn.ckeditor.com/4.7.3/standard/ckeditor.js"></script>
<script>

  function validateApp() {
    let passed = true;
    $('.modal-content').empty();
    let missingList = `
      <h4>Missing Fields</h4>
      <p>Please make sure the fields listed below are filled in</p>`;
    missingList += `<ul>`;
    if($('#title').val() === '') {
      missingList +=  `<li>Title</li>`;
      passed = false;
    }
    if($('#desc').val() === '') {
      missingList += `<li>Description</li>`;
      passed = false;
    }
    if($('#url').val() === '') {
      missingList += `<li>Website URL</li>`;
      passed = false;
    }

    if(!CKEDITOR.instances['body'].getData().replace(/<[^>]*>/gi, '').length) {
      missingList += `<li>Application Details</li>`;
      passed = false;
    };

    missingList += '</ul>'
    if(passed) {
      return true;
    } else {
      $('.modal-content').append(missingList);
      $('#modal3').modal('open');
      return false;
    }
  }

  CKEDITOR.replace('body', {
    plugins: 'wysiwygarea,toolbar,basicstyles,link'
  });
  //DOM name of the text area
</script>